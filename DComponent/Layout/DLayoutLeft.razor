@namespace DComponent
@code {
    [CascadingParameter]
    protected DLayoutHandler _dLayout { get; set; }
    [Parameter]
    public string Header { get; set; }
    [Parameter]
    public bool Spliter { get; set; }
    [Parameter]
    public int WidthP { get; set; } = 0;//百分比
    [Parameter]
    public int Width { get; set; } = 0;//px
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _dLayout.InitElement(new LayoutElement
        {
            ElementType = LayoutElementType.L,
            Id = $"DC{Guid.NewGuid().ToString().Replace("-", "")}",
            WidthP = WidthP,
            HeightP = 100,
            Width = Width,
            Spliter = Spliter,
            Header = Header,
            ElementContext = ChildContent
        });
    }
}
