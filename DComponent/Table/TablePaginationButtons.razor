@namespace DComponent
<div class="d-flex justify-content-start ml-2">
    <button @onclick="@TableState.Paginate.Previous" disabled="@(!TableState.Paginate.CanPrev)" class="btn btn-outline-primary">上一页</button>
    @foreach (int i in TableState.Paginate.Pages())
    {
        if (i == -1)
        {
            <button class="btn btn-outline-primary" disabled="disabled">...</button>
        }
        else
        {
            <button @onclick="@(() => TableState.Paginate.Jump(i))" class="btn @(TableState.Paginate.Current == i ? "btn-outline-info" : "")">@(i + 1)</button>
        }
    }
    <button @onclick="@TableState.Paginate.Next" disabled="@(!TableState.Paginate.CanNext)" class="FlareTablePaginateButton FlareTablePaginateButton_Next">下一页</button>
</div>

@code {
    [Parameter]
    public TableStateHandler TableState { get; set; }
}
