@namespace DComponent
@code {
    [CascadingParameter]
    protected TableStateHandler TableState { get; set; }
    [Parameter]
    public string FieldName { get; set; }
    [Parameter]
    public string Caption { get; set; }
    [Parameter]
    public string Width { get; set; } = "200px";
    [Parameter]
    public RenderFragment<object> CustomContext { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();
        TableState.InitColumn(new Column
        {
            CType = ColumnType.U,
            Property = TableState.DataProps.First(v => v.Name == FieldName),
            CWidth = Width,
            Caption = Caption,
            CustomContext = CustomContext,
            EditMode = FieldEditMode.No
        });
    }
}
