                    </DLayoutCenter>
                </DLayout>
            </DLayoutLeft>
            <DLayoutCenter Header="测试center">
                <DTable Data="@_user" SelectMode="@SelectMode.M"
                        ShowGroup="true"
                        ShowRowDetail="true"
                        AllowEdit="true"
                        FirstExpandAllGroup="true">
